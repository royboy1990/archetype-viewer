{
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" if using React < 17
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"], // Ensures DOM types are included
    "skipLibCheck": true
  }
}